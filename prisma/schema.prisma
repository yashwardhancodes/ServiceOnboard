generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}
model ServiceCenter {
  id        Int      @id @default(autoincrement())
  centerName String
  phone     String
  email     String
  city      String
  state     String
  zipCode   String
  country   String   @default("India")
  latitude  String
  longitude String
  // In Postgres, we can store arrays of strings natively
  categories String[] 
  // We will store the file paths/URLs here, not the actual binary image
  imagePaths String[] 

  createdAt DateTime @default(now())
}